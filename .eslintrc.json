{
  "root": true,
  "extends": ["sukka/node"],
  "ignorePatterns": [
    "node_modules/",
    // disable for now
    "**/*.d.ts"
  ],
  "overrides": [
    {
      "files": ["**/*.js"],
      "rules": {
        "no-console": "off"
      },
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      }
    }
  ]
}
